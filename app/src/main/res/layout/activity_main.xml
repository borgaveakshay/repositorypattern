<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">


    <EditText
            android:id="@+id/searchTag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/search_image"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:inputType="text" android:autofillHints="@string/search_image"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/searchList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/searchTag"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/submit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/submit"
            app:layout_constraintTop_toTopOf="@+id/searchTag" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/searchTag" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/searchList" app:layout_constraintVertical_bias="0.0"/>
    <include layout="@layout/progress_bar"/>

</android.support.constraint.ConstraintLayout>